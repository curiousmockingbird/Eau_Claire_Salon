@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<div class="results">
@if(Model.Count == 0)
{
  <p>No clients yet</p>
}
else
{
@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"Client: {client.Name}", "Details", new { id = client.ClientId }) | Stylist: @client.Stylist.Name</li>
}
}

</div>

<p>@Html.ActionLink("Add New Client", "Create", "Clients", null, new { @class = "btn btn-primary" })</p>
<p>@Html.ActionLink("Back to stylists list", "Index", "Stylists")</p>
</div>