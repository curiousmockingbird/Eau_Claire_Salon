@{
  Layout = "_Layout";
}
@using HairSalon.Models;

<div class="container">
<h1>Here's a list of all your stylists, Claire!</h1>

@if(@Model.Count == 0)
{ <div class="if-empty">
  <h3>Well, it seems like you haven't added any stylists to your database.</h3>
  <p>@Html.ActionLink("Add a new stylist to your list here.", "Create", "Stylists")</p>
  </div>
}
else
{
<div class="results">
@foreach (Stylist stylist in Model)
{
<p>@Html.ActionLink($"{stylist.Name}>>> {stylist.StylistSpecialty}", "Details", new {id = stylist.StylistId})</p>
}
</div>

<p>@Html.ActionLink("Add a new stylist to your list here.", "Create", "Stylists")</p>
}

<p>@Html.ActionLink("Back to home page", "Index", "Home")</p>
</div>